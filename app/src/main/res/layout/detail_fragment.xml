            <TextView
                android:id="@+id/tv2"
                style="@style/TextviewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text='@{String.format("%s Casos", NumberFormat.getIntegerInstance().format(vm.paisSelected.cases))}' />

            <TextView
                android:id="@+id/tv3"
                style="@style/TextviewStyle"
                android:layout_width="wrap_content"
