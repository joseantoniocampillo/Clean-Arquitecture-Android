<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="pais"
            type="es.jacampillo.avancedelcovid.models_api_response.Pais" />

    </data>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"

        app:cardBackgroundColor="#EBEFE6"
        app:cardCornerRadius="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="12dp"
                android:contentDescription="@string/bandera_del_pais"
                app:imgUrl="@{pais.countryInfo.flag}"
                tools:src="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/tv1"
                style="@style/TextviewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{pais.country}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--            app:positivos="@{pais}"-->
            <TextView
                android:id="@+id/tv2"
                style="@style/TextviewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"

                android:text='@{String.format("%d Positivos", pais.cases)}' />

            <TextView
                android:id="@+id/tv3"
                style="@style/TextviewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv2"

                android:text='@{String.format("%d Recuperados", pais.recovered)}' />

            <TextView
                android:id="@+id/tv4"
                style="@style/TextviewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv3"

                android:text='@{String.format("%d Fallecidos", pais.deaths)}' />

            <TextView
                android:id="@+id/tv5"
                style="@style/TextviewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv4"
                android:text='@{String.format("%d En estado grave", pais.critical)}' />

            <TextView
                android:id="@+id/tv6"
                style="@style/TextviewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv5"
                android:text='@{String.format("%d Fallecidos hoy", pais.todayDeaths)}' />

            <TextView
                android:id="@+id/tv7"
                style="@style/TextviewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv6"
                android:text='@{String.format("%d Test", pais.tests)}' />

            <TextView
                android:id="@+id/tv8"
                style="@style/TextviewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv7"
                android:text='@{String.format("%d Test por millÃ³n", pais.testsPerOneMillion)}' />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>

